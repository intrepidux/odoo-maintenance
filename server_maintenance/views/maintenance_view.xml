<odoo>
    <data>
        <record id="server_maintenance_form_view" model="ir.ui.view">
            <field name="name">maintenance.equipment.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_title')]" position="before">
                    <div class="oe_right">
                        <field name="monitor_is_running" class="oe_inline" widget="state_selection"/>
                    </div>
                </xpath>
                <field name="employee_id" position="after">
                    <field name="is_monitored"/>
                    <field name="monitor_url"/>
                </field>
                <field name="location" position="after">
                    <field name="monitor_log"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
