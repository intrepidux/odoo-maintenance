<odoo>
    <data>
        <record id="server_maintenance_form_view" model="ir.ui.view">
            <field name="name">maintenance.equipment.form</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']/button[1]" position="before">
                    <button name="server_auto_sync" class="btn btn-secondary" string="Ping Server" type="object" icon="fa-globe"/>
                </xpath>
                <xpath expr="//div[hasclass('oe_title')]" position="before">
                    <div class="oe_right">
                        <field name="monitor_is_running" class="oe_inline" widget="state_selection"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='maintenance_team_id']" position="after">

                    <field name="is_monitored"/>
                    <field name="monitor_url"/>

                </xpath>
                <xpath expr="//group[1]/group[2]" position="after">
                    <label for="monitor_log_ids" string="Server Log" style="font-weight: bold;"/>
                    <field name="monitor_log_ids">
                        <tree>
                            <field name="date"/>
                            <field name="monitor_log" widget="html"/>
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
